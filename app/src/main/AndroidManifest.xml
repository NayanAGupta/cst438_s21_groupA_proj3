<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gupta.cst438_s21_groupa_proj3">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AdminDeleteRecipe"></activity>
        <activity android:name=".AdminViewRecipes"></activity>
        <activity android:name=".AdminDeleteUser"></activity>
        <activity android:name=".ViewRecipe"></activity>
        <activity android:name=".AdminViewUsers"></activity>
        <activity android:name=".AdminHomepageActivity"></activity>
        <activity android:name=".Search" />
        <activity android:name=".Preferences" />
        <activity android:name=".Submit" />
        <activity android:name=".Favorites" />
        <activity android:name=".HomepageActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".CreateAccountActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.parse.SERVER_URL"
            android:value="@string/back4app_server_url" />
        <meta-data
            android:name="com.parse.APPLICATION_ID"
            android:resource="@string/back4app_app_id" />
        <meta-data
            android:name="com.parse.CLIENT_KEY"
            android:value="@string/back4app_client_key" />
    </application>

</manifest>