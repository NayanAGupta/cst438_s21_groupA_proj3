<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Preferences">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/changeUsernameEditText"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="cursive"
        android:text="@string/change_username"
        android:textSize="30sp"
        android:layout_below="@id/toolbar"/>

    <EditText
        android:id="@+id/oUN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/old_username"
        android:textAlignment="center"
        android:layout_below="@id/changeUsernameEditText"/>

    <EditText
        android:id="@+id/nUN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/new_username"
        android:textAlignment="center"
        android:layout_below="@id/oUN"/>

    <TextView
        android:id="@+id/changePasswordEditText"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="cursive"
        android:text="@string/change_password"
        android:textSize="30sp"
        android:layout_below="@id/nUN"/>

    <EditText
        android:id="@+id/oPW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/old_password"
        android:textAlignment="center"
        android:layout_below="@id/changePasswordEditText"/>

    <EditText
        android:id="@+id/nPW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/new_password"
        android:textAlignment="center"
        android:layout_below="@id/oPW"/>

    <EditText
        android:id="@+id/cNPW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/confirm_new_password"
        android:textAlignment="center"
        android:layout_below="@id/nPW"/>

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="@string/confirm"
        android:layout_below="@id/cNPW"/>


</RelativeLayout>